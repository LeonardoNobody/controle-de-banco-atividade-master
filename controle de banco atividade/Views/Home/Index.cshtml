@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem-Vindo Ao Cadastro de Conta no Banco Piquezinduscria</h1>
    
</div>
    

<div class="text-center">
    <h4>Formulário de Abertura de Conta</h4>
    <p>Formulário destinado a abertura de contas (corrente e poupança) para não correntista</p>
</div>
<form method="post" asp-controller="Conta" asp-action="CriarConta">
    <div class="mb-3">
        <label for="nomeCliente"    class="form-label">Nome</label>
        <input type="text" class="form-control" value="" id="nomeCliente"   name="nomeCliente" />
    </div>
    <select class="form-select" id="tipoConta"  name="tipoConta">
        <option selected>Selecione O Tipo De Conta</option>
        <option value="Corrente">Conta Corrente</option>
        <option value="Poupanca">Conta Poupança</option>
    </select>
    <div class="mb-3">
        <label for="saldo" class="form-label">Saldo Inicial</label>
        <input type="number"  pattern="[0-9]+([,\.][0-9]+?" step="0.01" class="form-control"    id="saldo"  name="saldo"    placeholder="Informe no formato 100,00">
    </div>
    <div class="d-grid gap-2">
        <button type="submit"   class="btn btn-primary">Criar Conta</button>
    </div>
    </form>
      
    
